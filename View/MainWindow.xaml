<Window
    x:Class="MUSYNCSaveDecode.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MUSYNCSaveDecode"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="同步音律喵赛克Steam端本地存档分析"
    Width="1000"
    Height="670"
    d:DataContext="{d:DesignInstance Type=local:ViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="18*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="6*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Button
                x:Name="RefreshBtn"
                Grid.Column="0"
                Margin="3,2"
                Click="RefreshBtn_Click"
                Content="解码并刷新"
                FontSize="18" />
            <TextBox
                x:Name="SavePathTBox"
                Grid.Column="1"
                Margin="3,2"
                VerticalContentAlignment="Center"
                d:Text="Input SaveFile or AnalyzeFile Path (savedata.sav)"
                FontSize="18"
                Text="{Binding SavePath}" />
            <Button
                x:Name="OpenFileSelect"
                Grid.Column="2"
                Margin="3,2"
                Click="OpenFileSelect_Click"
                Content="选择文件"
                FontSize="18" />
        </Grid>
    </Grid>
</Window>